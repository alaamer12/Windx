{
  "info": {
    "name": "Backend API - Metrics",
    "description": "Postman collection for Backend API - Metrics and monitoring endpoints for database connection pool and performance monitoring.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Metrics",
      "item": [
        {
          "name": "Get Database Metrics",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response time is less than 1s\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(1000);",
                  "});",
                  "",
                  "pm.test(\"Response has pool metrics\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('pool_size');",
                  "    pm.expect(jsonData).to.have.property('checked_in');",
                  "    pm.expect(jsonData).to.have.property('checked_out');",
                  "    pm.expect(jsonData).to.have.property('overflow');",
                  "    pm.expect(jsonData).to.have.property('total_connections');",
                  "});",
                  "",
                  "pm.test(\"Metrics are numbers\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.pool_size).to.be.a('number');",
                  "    pm.expect(jsonData.checked_in).to.be.a('number');",
                  "    pm.expect(jsonData.checked_out).to.be.a('number');",
                  "    pm.expect(jsonData.overflow).to.be.a('number');",
                  "    pm.expect(jsonData.total_connections).to.be.a('number');",
                  "});",
                  "",
                  "pm.test(\"Total connections calculation is correct\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.total_connections).to.equal(jsonData.pool_size + jsonData.overflow);",
                  "});",
                  "",
                  "pm.test(\"Pool usage is within limits\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.checked_out).to.be.at.most(jsonData.pool_size + jsonData.overflow);",
                  "    pm.expect(jsonData.checked_in + jsonData.checked_out).to.be.at.most(jsonData.total_connections);",
                  "});",
                  "",
                  "pm.test(\"No pool exhaustion\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    var usage_ratio = jsonData.checked_out / jsonData.pool_size;",
                  "    pm.expect(usage_ratio).to.be.below(0.9);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/metrics/database",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "metrics", "database"]
            },
            "description": "Get database connection pool metrics. Superuser only. Returns real-time information about connection pool usage including pool size, checked in/out connections, overflow, and total connections. Useful for monitoring database connection health and identifying connection leaks."
          },
          "response": []
        },
        {
          "name": "Get Database Metrics - Unauthorized",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 401\", function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test(\"Response has error message\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('detail');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{regular_user_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/metrics/database",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "metrics", "database"]
            },
            "description": "Test that regular users cannot access database metrics endpoint. Should return 403 Forbidden."
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
}


