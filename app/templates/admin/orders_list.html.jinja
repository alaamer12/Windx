{% extends "admin/base.html.jinja" %}
{% from "components/buttons.html.jinja" import button, button_group %}

{% block title %}Orders - WindX Admin{% endblock %}

{% block content %}
<div class="page-header">
    <div>
        <h1 class="page-title">Orders</h1>
        <p class="text-gray-500 mt-1">Manage customer orders and production status</p>
    </div>
</div>

<div class="card">
    <!-- Search and Filter -->
    <div class="flex flex-col md:flex-row gap-4 mb-6 justify-between">
        <form class="flex gap-4 flex-1" method="get">
            <div class="flex-1 max-w-md relative">
                <input type="text" name="search" placeholder="Search order # or customer..." 
                       value="{{ search or '' }}" class="form-control pl-10">
                <span class="absolute left-3 top-2.5 text-gray-400">üîç</span>
            </div>
            
            <select name="status" class="form-control w-40" onchange="this.form.submit()">
                <option value="">All Statuses</option>
                <option value="confirmed" {% if status_filter == 'confirmed' %}selected{% endif %}>Confirmed</option>
                <option value="production" {% if status_filter == 'production' %}selected{% endif %}>Production</option>
                <option value="shipped" {% if status_filter == 'shipped' %}selected{% endif %}>Shipped</option>
                <option value="delivered" {% if status_filter == 'delivered' %}selected{% endif %}>Delivered</option>
                <option value="cancelled" {% if status_filter == 'cancelled' %}selected{% endif %}>Cancelled</option>
            </select>
        </form>
    </div>

    <!-- Orders Table -->
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 border-b">
                <tr>
                    <th class="px-6 py-3">Order #</th>
                    <th class="px-6 py-3">Customer</th>
                    <th class="px-6 py-3">Date</th>
                    <th class="px-6 py-3">Status</th>
                    <th class="px-6 py-3">Items</th>
                    <th class="px-6 py-3">Total</th>
                    <th class="px-6 py-3 text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                <tr class="bg-white border-b hover:bg-gray-50">
                    <td class="px-6 py-4 font-medium text-gray-900">
                        <a href="/api/v1/admin/orders/{{ order.id }}" class="text-blue-600 hover:underline">
                            {{ order.order_number }}
                        </a>
                    </td>
                    <td class="px-6 py-4">
                        {% if order.customer %}
                        <a href="/api/v1/admin/customers/{{ order.customer.id }}" class="hover:underline">
                            {{ order.customer.company_name or order.customer.contact_person }}
                        </a>
                        {% else %}
                        <span class="text-gray-400">Unknown</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        {{ order.order_date.strftime('%Y-%m-%d') }}
                    </td>
                    <td class="px-6 py-4">
                        <span class="px-2.5 py-0.5 rounded-full text-xs font-medium
                            {% if order.status == 'confirmed' %}bg-blue-100 text-blue-800
                            {% elif order.status == 'production' %}bg-purple-100 text-purple-800
                            {% elif order.status == 'shipped' %}bg-indigo-100 text-indigo-800
                            {% elif order.status == 'delivered' %}bg-green-100 text-green-800
                            {% elif order.status == 'cancelled' %}bg-red-100 text-red-800
                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                            {{ order.status|upper }}
                        </span>
                    </td>
                    <td class="px-6 py-4">
                        {{ order.items|length }}
                    </td>
                    <td class="px-6 py-4 font-medium">
                        ${{ "%.2f"|format(order.quote.total_amount) }}
                    </td>
                    <td class="px-6 py-4 text-right">
                        {{ button("üëÅÔ∏è View", href="/api/v1/admin/orders/" + order.id|string, variant="outline", size="xs") }}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                        No orders found matching your criteria.
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    {% if total_pages > 1 %}
    <div class="flex justify-center mt-6 gap-2">
        {% if page > 1 %}
            {{ button("‚Üê Previous", href="?page=" + (page - 1)|string + (("&search=" + search) if search else "") + (("&status=" + status_filter) if status_filter else ""), variant="outline", size="sm") }}
        {% endif %}
        
        <span class="py-1 px-3 text-gray-600">Page {{ page }} of {{ total_pages }}</span>
        
        {% if page < total_pages %}
            {{ button("Next ‚Üí", href="?page=" + (page + 1)|string + (("&search=" + search) if search else "") + (("&status=" + status_filter) if status_filter else ""), variant="outline", size="sm") }}
        {% endif %}
    </div>
    {% endif %}
</div>
{% endblock %}
