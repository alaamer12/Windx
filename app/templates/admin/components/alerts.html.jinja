{# Alerts Component - Flash messages and notifications #}

{# Display error messages #}
{% if error %}
<div class="alert alert-error" role="alert">
    <span class="alert-icon">⚠️</span>
    <span class="alert-message">{{ error }}</span>
    <button type="button" class="alert-close" onclick="this.parentElement.remove()" aria-label="Close">×</button>
</div>
{% endif %}

{# Display success messages #}
{% if success %}
<div class="alert alert-success" role="alert">
    <span class="alert-icon">✅</span>
    <span class="alert-message">{{ success }}</span>
    <button type="button" class="alert-close" onclick="this.parentElement.remove()" aria-label="Close">×</button>
</div>
{% endif %}

{# Display warning messages #}
{% if warning %}
<div class="alert alert-warning" role="alert">
    <span class="alert-icon">⚡</span>
    <span class="alert-message">{{ warning }}</span>
    <button type="button" class="alert-close" onclick="this.parentElement.remove()" aria-label="Close">×</button>
</div>
{% endif %}

{# Display info messages #}
{% if info %}
<div class="alert alert-info" role="alert">
    <span class="alert-icon">ℹ️</span>
    <span class="alert-message">{{ info }}</span>
    <button type="button" class="alert-close" onclick="this.parentElement.remove()" aria-label="Close">×</button>
</div>
{% endif %}

{# Flask flash messages support #}
{% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
        {% for category, message in messages %}
            <div class="alert alert-{{ category }}" role="alert">
                <span class="alert-icon">
                    {% if category == 'error' or category == 'danger' %}⚠️
                    {% elif category == 'success' %}✅
                    {% elif category == 'warning' %}⚡
                    {% else %}ℹ️
                    {% endif %}
                </span>
                <span class="alert-message">{{ message }}</span>
                <button type="button" class="alert-close" onclick="this.parentElement.remove()" aria-label="Close">×</button>
            </div>
        {% endfor %}
    {% endif %}
{% endwith %}
