# Local Docker PostgreSQL Configuration

# Application
APP_NAME="My API (Local)"
APP_VERSION="1.0.0"
DEBUG=True
API_V1_PREFIX="/api/v1"

# Database - Local Docker PostgreSQL
DATABASE_PROVIDER=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=myapi

# Database Pool
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_PRE_PING=True
DATABASE_ECHO=True

# Security (development only)
SECRET_KEY="local-development-secret-key-min-32-chars-not-for-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]
