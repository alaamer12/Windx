{% extends "admin/base.html.jinja" %}
{% from "components/buttons.html.jinja" import button, button_group, fab with context %}

{% block title %}Button Component Demo - {{ super() }}{% endblock %}

{% block content %}
<div class="space-y-8">
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Professional Button Component System</h1>
        
        <!-- Basic Variants -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Button Variants</h2>
            {% call button_group(gap="md") %}
                {{ button("Primary", variant="primary") }}
                {{ button("Outline", variant="outline") }}
                {{ button("Ghost", variant="ghost") }}
                {{ button("Danger", variant="danger") }}
                {{ button("Success", variant="success") }}
                {{ button("Warning", variant="warning") }}
            {% endcall %}
        </section>

        <!-- Tab Buttons -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Tab Navigation</h2>
            <div class="tab-buttons">
                {{ button("Input", variant="tab", icon="fas fa-edit", class="active") }}
                {{ button("Preview", variant="tab", icon="fas fa-eye") }}
                {{ button("Settings", variant="tab", icon="fas fa-cog") }}
            </div>
        </section>

        <!-- Sizes -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Button Sizes</h2>
            {% call button_group(gap="md", class="items-center") %}
                {{ button("Extra Small", variant="primary", size="xs") }}
                {{ button("Small", variant="primary", size="sm") }}
                {{ button("Medium", variant="primary", size="md") }}
                {{ button("Large", variant="primary", size="lg") }}
                {{ button("Extra Large", variant="primary", size="xl") }}
            {% endcall %}
        </section>

        <!-- With Icons -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Buttons with Icons</h2>
            {% call button_group(gap="md") %}
                {{ button("Save Changes", variant="primary", icon="fas fa-save") }}
                {{ button("Delete Item", variant="danger", icon="fas fa-trash", icon_position="left") }}
                {{ button("Download", variant="outline", icon="fas fa-download", icon_position="right") }}
                {{ button("Settings", variant="ghost", icon="fas fa-cog", icon_only=true, title="Open Settings") }}
            {% endcall %}
        </section>

        <!-- States -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Button States</h2>
            {% call button_group(gap="md") %}
                {{ button("Normal", variant="primary") }}
                {{ button("Disabled", variant="primary", disabled=true) }}
                {{ button("Loading...", variant="primary", loading=true, disabled=true) }}
            {% endcall %}
        </section>

        <!-- Links as Buttons -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Link Buttons</h2>
            {% call button_group(gap="md") %}
                {{ button("Go to Dashboard", variant="primary", href="/admin", icon="fas fa-tachometer-alt") }}
                {{ button("External Link", variant="outline", href="https://example.com", target="_blank", icon="fas fa-external-link-alt") }}
            {% endcall %}
        </section>

        <!-- Button Groups -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Button Groups</h2>
            
            <div class="space-y-4">
                <div>
                    <h3 class="text-sm font-medium text-gray-600 mb-2">Left Aligned</h3>
                    {% call button_group(align="left", gap="sm") %}
                        {{ button("First", variant="outline") }}
                        {{ button("Second", variant="outline") }}
                        {{ button("Third", variant="primary") }}
                    {% endcall %}
                </div>
                
                <div>
                    <h3 class="text-sm font-medium text-gray-600 mb-2">Center Aligned</h3>
                    {% call button_group(align="center", gap="md") %}
                        {{ button("Cancel", variant="outline") }}
                        {{ button("Save Draft", variant="ghost") }}
                        {{ button("Publish", variant="primary") }}
                    {% endcall %}
                </div>
                
                <div>
                    <h3 class="text-sm font-medium text-gray-600 mb-2">Right Aligned</h3>
                    {% call button_group(align="right", gap="lg") %}
                        {{ button("Back", variant="outline", icon="fas fa-arrow-left") }}
                        {{ button("Continue", variant="primary", icon="fas fa-arrow-right", icon_position="right") }}
                    {% endcall %}
                </div>
            </div>
        </section>

        <!-- Form Examples -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Form Integration</h2>
            <form class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                        <input type="text" class="form-control" placeholder="Enter your name">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input type="email" class="form-control" placeholder="Enter your email">
                    </div>
                </div>
                
                {% call button_group(align="right", gap="md", class="pt-4 border-t") %}
                    {{ button("Reset", type="reset", variant="outline") }}
                    {{ button("Save", type="submit", variant="primary", icon="fas fa-save") }}
                {% endcall %}
            </form>
        </section>

        <!-- Interactive Examples -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Interactive Examples</h2>
            {% call button_group(gap="md") %}
                {{ button("Show Alert", variant="primary", onclick="alert('Button clicked!')") }}
                {{ button("Confirm Action", variant="danger", onclick="confirm('Are you sure?') && alert('Confirmed!')") }}
                {{ button("Toggle Class", variant="outline", onclick="this.classList.toggle('btn-primary'); this.classList.toggle('btn-outline')") }}
            {% endcall %}
        </section>

        <!-- Code Examples -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Usage Examples</h2>
            <div class="bg-gray-50 rounded-lg p-4 font-mono text-sm">
                <div class="text-gray-600 mb-2">Basic button:</div>
                <div class="text-gray-800 mb-4">{{ '{{ button("Save Changes", variant="primary", icon="fas fa-save") }}' }}</div>
                
                <div class="text-gray-600 mb-2">Button group:</div>
                <div class="text-gray-800 mb-4">
                    {{ '{% call button_group(align="right", gap="md") %}' }}<br>
                    &nbsp;&nbsp;{{ '{{ button("Cancel", variant="outline") }}' }}<br>
                    &nbsp;&nbsp;{{ '{{ button("Save", variant="primary") }}' }}<br>
                    {{ '{% endcall %}' }}
                </div>
                
                <div class="text-gray-600 mb-2">With Alpine.js:</div>
                <div class="text-gray-800">
                    {{ '{{ button("Submit", variant="primary", alpine_attrs=\'@click="submitForm()" :disabled="loading"\') }}' }}
                </div>
            </div>
        </section>
    </div>
</div>

<!-- Floating Action Button Demo -->
{{ fab("Add New Item", icon="fas fa-plus", onclick="alert('FAB clicked!')") }}
{% endblock %}