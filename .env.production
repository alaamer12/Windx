# Production Environment Configuration

# Application
APP_NAME="My API"
APP_VERSION="1.0.0"
DEBUG=False
API_V1_PREFIX="/api/v1"

# Database - Production PostgreSQL
DATABASE_PROVIDER=postgresql
DATABASE_HOST=your-production-db-host.com
DATABASE_PORT=5432
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_secure_db_password
DATABASE_NAME=your_db_name

# Database Pool (larger for production)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_PRE_PING=True
DATABASE_ECHO=False

# Security (MUST use strong secret key)
SECRET_KEY="your-very-strong-secret-key-min-32-chars-generated-securely"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (restrict to your production domains)
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
