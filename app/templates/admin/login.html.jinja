{% extends "admin/base.html.jinja" %}

{% block title %}Login - WindX Admin{% endblock %}

{% block body_class %}login-page{% endblock %}

{% set hide_sidebar = true %}

{% block content %}
<div class="login-page">
    <div class="login-card">
        <div class="login-header">
            <h1 class="login-title">WindX Admin</h1>
            <p class="login-subtitle">Sign in to manage your products</p>
        </div>

        {% if error %}
        <div class="alert alert-error">
            {{ error }}
        </div>
        {% endif %}

        <form action="/api/v1/admin/login" method="post">
            <div class="form-group">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
                Sign In
            </button>
        </form>
    </div>
</div>
{% endblock %}
