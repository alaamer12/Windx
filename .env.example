# Application
APP_NAME="My API"
APP_VERSION="1.0.0"
DEBUG=True
API_V1_PREFIX="/api/v1"

# Database Configuration
# Provider: "supabase" for development, "postgresql" for production
DATABASE_PROVIDER=supabase

# Supabase Development Database
DATABASE_HOST=db.xxxxx.supabase.co
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your-supabase-password
DATABASE_NAME=postgres

# Production PostgreSQL Database (uncomment and use in production)
# DATABASE_PROVIDER=postgresql
# DATABASE_HOST=your-production-db-host.com
# DATABASE_PORT=5432
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password
# DATABASE_NAME=your_db_name

# Database Connection Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_PRE_PING=True
DATABASE_ECHO=False

# Security
SECRET_KEY="your-secret-key-here-change-in-production-min-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Cache (Redis)
CACHE_ENABLED=True
CACHE_REDIS_HOST=localhost
CACHE_REDIS_PORT=6379
CACHE_REDIS_PASSWORD=
CACHE_REDIS_DB=0
CACHE_PREFIX=myapi:cache
CACHE_DEFAULT_TTL=300

# Rate Limiter (Redis)
LIMITER_ENABLED=True
LIMITER_REDIS_HOST=localhost
LIMITER_REDIS_PORT=6379
LIMITER_REDIS_PASSWORD=
LIMITER_REDIS_DB=1
LIMITER_PREFIX=myapi:limiter
LIMITER_DEFAULT_TIMES=100
LIMITER_DEFAULT_SECONDS=60
