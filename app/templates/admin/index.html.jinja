{% extends "admin/base.html.jinja" %}
{% from "components/buttons.html.jinja" import button with context %}

{% block title %}Dashboard - WindX Admin{% endblock %}

{% set active_page = "dashboard" %}

{% block content %}
<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
</div>

<div class="card">
    <h2>Welcome, {{ current_user.full_name or current_user.username }}!</h2>
    <p style="color: var(--text-light); margin-top: 0.5rem;">
        Select an option from the sidebar to manage your product configuration system.
    </p>
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;">
    <div class="card">
        <h3>ğŸ­ Manufacturing Types</h3>
        <p style="color: var(--text-light); margin: 0.5rem 0 1rem;">
            Manage product categories and base configurations.
        </p>
        {{ button(
            text="Manage Types",
            href="/api/v1/admin/manufacturing-types",
            variant="outline"
        ) }}
    </div>

    <div class="card">
        <h3>ğŸŒ³ Hierarchy Editor</h3>
        <p style="color: var(--text-light); margin: 0.5rem 0 1rem;">
            Visual editor for attribute trees and options.
        </p>
        {{ button(
            text="Open Editor",
            href="/api/v1/admin/hierarchy",
            variant="outline"
        ) }}
    </div>

    <div class="card" style="opacity: 0.7;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h3>ğŸ‘¥ Customers</h3>
            <span class="badge-soon">Soon</span>
        </div>
        <p style="color: var(--text-light); margin: 0.5rem 0 1rem;">
            View and manage customer accounts.
        </p>
        {{ button(
            text="View Customers",
            variant="outline",
            disabled=true,
            style="cursor: not-allowed;"
        ) }}
    </div>

    <div class="card" style="opacity: 0.7;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h3>ğŸ“¦ Orders</h3>
            <span class="badge-soon">Soon</span>
        </div>
        <p style="color: var(--text-light); margin: 0.5rem 0 1rem;">
            Track and manage customer orders.
        </p>
        {{ button(
            text="View Orders",
            variant="outline",
            disabled=true,
            style="cursor: not-allowed;"
        ) }}
    </div>
</div>
{% endblock %}
