{% extends "dashboard/base.html.jinja" %}

{% block title %}Dashboard - Admin{% endblock %}

{% block content %}
<div x-data="dashboard()" x-init="init()">
    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Dashboard Overview</h1>
        <p class="mt-2 text-gray-600">Welcome back, {{ current_user.full_name or current_user.username }}! Here's what's happening today.</p>
    </div>
    
    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Total Users -->
        <div class="stat-card">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-100 text-sm font-medium">Total Users</p>
                    <p id="stat-total_users" class="text-4xl font-bold mt-2">{{ stats.total_users }}</p>
                </div>
                <div class="bg-white bg-opacity-20 rounded-full p-4">
                    <i class="fas fa-users text-3xl"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm text-blue-100">
                <i class="fas fa-arrow-up mr-1"></i>
                <span id="stat-new_users_week">{{ stats.new_users_week }}</span> new this week
            </div>
        </div>
        
        <!-- Active Users -->
        <div class="bg-gradient-to-br from-green-500 to-green-600 text-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-green-100 text-sm font-medium">Active Users</p>
                    <p id="stat-active_users" class="text-4xl font-bold mt-2">{{ stats.active_users }}</p>
                </div>
                <div class="bg-white bg-opacity-20 rounded-full p-4">
                    <i class="fas fa-user-check text-3xl"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm text-green-100">
                <i class="fas fa-check-circle mr-1"></i>
                {{ "%.1f"|format((stats.active_users / stats.total_users * 100) if stats.total_users > 0 else 0) }}% of total
            </div>
        </div>
        
        <!-- New Users Today -->
        <div class="bg-gradient-to-br from-purple-500 to-purple-600 text-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-purple-100 text-sm font-medium">New Today</p>
                    <p id="stat-new_users_today" class="text-4xl font-bold mt-2">{{ stats.new_users_today }}</p>
                </div>
                <div class="bg-white bg-opacity-20 rounded-full p-4">
                    <i class="fas fa-user-plus text-3xl"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm text-purple-100">
                <i class="fas fa-calendar-day mr-1"></i>
                Registered today
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="card mb-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="/api/v1/dashboard/data-entry" class="flex items-center space-x-3 p-4 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors">
                <div class="bg-blue-600 text-white rounded-full p-3">
                    <i class="fas fa-plus text-xl"></i>
                </div>
                <div>
                    <p class="font-semibold text-gray-900">Add New Data</p>
                    <p class="text-sm text-gray-600">Create new entries</p>
                </div>
            </a>
            
            <a href="/api/v1/export/users/csv" class="flex items-center space-x-3 p-4 bg-green-50 hover:bg-green-100 rounded-lg transition-colors">
                <div class="bg-green-600 text-white rounded-full p-3">
                    <i class="fas fa-download text-xl"></i>
                </div>
                <div>
                    <p class="font-semibold text-gray-900">Export Data</p>
                    <p class="text-sm text-gray-600">Download CSV/JSON</p>
                </div>
            </a>
            
            <a href="/docs" class="flex items-center space-x-3 p-4 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors">
                <div class="bg-purple-600 text-white rounded-full p-3">
                    <i class="fas fa-book text-xl"></i>
                </div>
                <div>
                    <p class="font-semibold text-gray-900">API Docs</p>
                    <p class="text-sm text-gray-600">View documentation</p>
                </div>
            </a>
        </div>
    </div>
    
    <!-- Recent Users -->
    <div class="card">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-bold text-gray-900">Recent Users</h2>
            <a href="/api/v1/dashboard/users" class="text-blue-600 hover:text-blue-700 text-sm font-medium">
                View All <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Joined</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for user in users %}
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-semibold">
                                    {{ user.username[0].upper() }}
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">{{ user.username }}</div>
                                    <div class="text-sm text-gray-500">{{ user.full_name or 'N/A' }}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">{{ user.email }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if user.is_active %}
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                <i class="fas fa-check-circle mr-1"></i> Active
                            </span>
                            {% else %}
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                <i class="fas fa-times-circle mr-1"></i> Inactive
                            </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ user.created_at.strftime('%Y-%m-%d') }}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_scripts %}
<script>
    function dashboard() {
        return {
            stats: {{ stats|tojson|safe }},
            
            init() {
                console.log('Dashboard initialized');
            },
            
            refreshStats() {
                fetch('/api/v1/dashboard/stats')
                    .then(res => res.json())
                    .then(data => {
                        this.stats = data;
                        showToast('Stats updated!', 'info');
                    })
                    .catch(err => {
                        console.error('Failed to refresh stats:', err);
                        showToast('Failed to refresh stats', 'error');
                    });
            }
        };
    }
</script>
{% endblock %}
