{% extends "admin/base.html.jinja" %}

{% block title %}Hierarchy Editor - WindX Admin{% endblock %}

{% set active_page = "hierarchy" %}

{% block extra_css %}
<style>
    /* Tooltip Styles */
    .tooltip-trigger {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: var(--primary);
        color: white;
        font-size: 0.75rem;
        font-weight: 700;
        cursor: help;
        margin-left: 0.5rem;
        position: relative;
    }
    
    .tooltip-trigger:hover::after {
        content: attr(data-tooltip);
        position: absolute;
        bottom: calc(100% + 8px);
        left: 50%;
        transform: translateX(-50%);
        background: #1e293b;
        color: white;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        font-weight: 400;
        white-space: nowrap;
        max-width: 300px;
        white-space: normal;
        width: max-content;
        z-index: 1000;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
    }
    
    .tooltip-trigger:hover::before {
        content: '';
        position: absolute;
        bottom: calc(100% + 2px);
        left: 50%;
        transform: translateX(-50%);
        border: 6px solid transparent;
        border-top-color: #1e293b;
        z-index: 1000;
    }
    
    /* Compact Header Section */
    .compact-controls {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 1rem;
        padding: 1.5rem;
        color: white;
        margin-bottom: 1.5rem;
    }
    
    .compact-controls form {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 1rem;
        align-items: end;
    }
    
    .compact-controls label {
        color: white;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        font-size: 0.875rem;
    }
    
    .compact-controls select {
        background: white;
        border: none;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        font-size: 0.95rem;
        width: 100%;
    }
    
    .compact-controls .btn {
        background: white;
        color: #667eea;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
    }
    
    /* Info Bar - More Compact */
    .info-bar-compact {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 0.75rem;
        margin-bottom: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .info-bar-compact strong {
        font-size: 1.1rem;
    }
    
    .info-bar-compact .info-details {
        opacity: 0.9;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    
    .info-bar-compact .btn {
        background: white;
        color: #f5576c;
        font-weight: 600;
        padding: 0.6rem 1.2rem;
        font-size: 0.9rem;
    }
    
    /* Help Box - Collapsible */
    .help-box {
        background: #eff6ff;
        border-left: 4px solid var(--primary);
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
        font-size: 0.85rem;
        line-height: 1.5;
    }
    
    /* Main Layout - Full Height with Better Proportions */
    .main-layout {
        display: grid;
        grid-template-columns: 320px 1fr;
        gap: 1.5rem;
        height: calc(100vh - 280px);
        min-height: 600px;
    }
    
    /* Sidebar - Tree List */
    .tree-sidebar {
        background: white;
        border: 2px solid var(--border);
        border-radius: 1rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }
    
    .sidebar-header {
        padding: 1rem 1.25rem;
        border-bottom: 2px solid var(--border);
        background: #f8fafc;
        font-weight: 700;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .sidebar-content {
        flex: 1;
        overflow-y: auto;
        padding: 1rem;
    }
    
    /* Main Visualization Area */
    .visualization-area {
        background: white;
        border: 2px solid var(--border);
        border-radius: 1rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }
    
    /* Tab Navigation - Cleaner */
    .tab-nav {
        display: flex;
        border-bottom: 2px solid var(--border);
        background: #f8fafc;
        padding: 0.5rem 0.5rem 0;
        gap: 0.25rem;
    }
    
    .tab-btn {
        padding: 0.75rem 1.5rem;
        border: none;
        background: transparent;
        cursor: pointer;
        font-weight: 600;
        color: var(--text-light);
        border-radius: 0.5rem 0.5rem 0 0;
        transition: all 0.2s;
        font-size: 0.9rem;
    }
    
    .tab-btn:hover {
        background: rgba(255, 255, 255, 0.5);
    }
    
    .tab-btn.active {
        background: white;
        color: var(--primary);
    }
    
    /* Tab Content - Full Height */
    .tab-content-wrapper {
        flex: 1;
        overflow: hidden;
        position: relative;
    }
    
    .tab-pane {
        display: none;
        height: 100%;
        overflow: auto;
        background: white;
    }
    
    .tab-pane.active {
        display: flex;
        flex-direction: column;
    }
    
    /* Tree View Styling */
    .tree-view-content {
        padding: 1.5rem;
        flex: 1;
    }
    
    .tree-view-content pre {
        font-family: 'Consolas', 'Monaco', monospace;
        font-size: 0.85rem;
        line-height: 1.6;
        color: #334155;
        background: #f8fafc;
        padding: 1.5rem;
        border-radius: 0.5rem;
        margin: 0;
        overflow-x: auto;
    }
    
    /* Diagram View - Optimized for Visibility */
    .diagram-view-content {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        background: #f8fafc;
        overflow: auto;
    }
    
    .diagram-container {
        max-width: 100%;
        max-height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .diagram-container img {
        max-width: 100%;
        max-height: 100%;
        height: auto;
        border-radius: 0.75rem;
        box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.2);
        background: white;
        padding: 1rem;
        object-fit: contain;
    }
    
    /* Diagram Controls */
    .diagram-controls {
        position: absolute;
        top: 1rem;
        right: 1rem;
        display: flex;
        gap: 0.5rem;
        z-index: 10;
    }
    
    .diagram-controls button {
        background: white;
        border: 2px solid var(--border);
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        cursor: pointer;
        font-weight: 600;
        font-size: 0.875rem;
        transition: all 0.2s;
    }
    
    .diagram-controls button:hover {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }
    
    /* Node Details Panel */
    .details-view-content {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 2rem;
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        color: var(--text-light);
    }
    
    .empty-state-icon {
        font-size: 3.5rem;
        opacity: 0.3;
        margin-bottom: 1rem;
    }
    
    .empty-state h3 {
        margin-bottom: 0.5rem;
        color: var(--text);
    }
    
    .empty-state p {
        margin-bottom: 1rem;
    }
    
    /* Responsive Design */
    @media (max-width: 1200px) {
        .main-layout {
            grid-template-columns: 280px 1fr;
        }
    }
    
    @media (max-width: 992px) {
        .main-layout {
            grid-template-columns: 1fr;
            grid-template-rows: 300px 1fr;
        }
        
        .tree-sidebar {
            max-height: 300px;
        }
    }
    
    /* Fullscreen Mode */
    .fullscreen-mode {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 9999;
        background: white;
        display: flex;
        flex-direction: column;
    }
    
    .fullscreen-mode .diagram-view-content {
        padding: 2rem;
    }
    
    .fullscreen-mode .diagram-container img {
        max-height: calc(100vh - 8rem);
    }
</style>
{% endblock %}

{% block content %}
<!-- Flash Messages -->
{% include "admin/components/alerts.html.jinja" %}

<div class="page-header">
    <div>
        <h1 class="page-title" style="display: flex; align-items: center;">
            üå≥ Hierarchy Editor
            <span class="tooltip-trigger" data-tooltip="Build your product's attribute tree here. Start by selecting a manufacturing type, then create categories, attributes, and options.">!</span>
        </h1>
        <p style="color: var(--text-light); margin-top: 0.5rem;">Build dynamic attribute hierarchies for your products</p>
    </div>
    <a href="/api/v1/admin/documentation#hierarchy" class="btn btn-outline">
        üìö View Guide
    </a>
</div>

<!-- Manufacturing Type Selector - Compact -->
<div class="compact-controls">
    <form method="GET" action="/api/v1/admin/hierarchy">
        <div>
            <label for="manufacturing_type_id">
                Select Manufacturing Type
                <span class="tooltip-trigger" data-tooltip="Choose the product type you want to configure. Each type has its own independent attribute hierarchy.">!</span>
            </label>
            <select name="manufacturing_type_id" id="manufacturing_type_id" class="form-control" onchange="this.form.submit()">
                <option value="">-- Select a Type --</option>
                {% for mfg_type in manufacturing_types %}
                <option value="{{ mfg_type.id }}" {% if mfg_type.id == selected_type_id %}selected{% endif %}>
                    {{ mfg_type.name }}
                </option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn">Load Hierarchy</button>
    </form>
</div>

{% if selected_manufacturing_type %}
<!-- Selected Type Info - Compact -->
<div class="info-bar-compact">
    <div>
        <strong>{{ selected_manufacturing_type.name }}</strong>
        <div class="info-details">
            Base Price: ${{ "%.2f"|format(selected_manufacturing_type.base_price) }} | 
            Base Weight: {{ "%.2f"|format(selected_manufacturing_type.base_weight) }} kg
        </div>
    </div>
    <a href="/api/v1/admin/hierarchy/node/create?manufacturing_type_id={{ selected_type_id }}" class="btn">
        + Create Root Node
        <span class="tooltip-trigger" data-tooltip="Create the first node in your hierarchy. This is the top-level category that will contain all other attributes.">!</span>
    </a>
</div>

<!-- Help Box - Compact -->
<div class="help-box">
    <strong>üí° Quick Start:</strong> 
    {% if not attribute_nodes %}
    Click "Create Root Node" to start building your hierarchy.
    {% else %}
    Click nodes in the tree or use tabs to switch between tree/diagram views. Hover over (!) icons for help.
    {% endif %}
</div>

<!-- Main Layout: Sidebar + Visualization -->
<div class="main-layout">
    <!-- Left Sidebar: Tree List View -->
    <div class="tree-sidebar">
        <div class="sidebar-header">
            Tree Structure
            <span class="tooltip-trigger" data-tooltip="Text-based view of your attribute hierarchy">!</span>
        </div>
        <div class="sidebar-content">
            {% if ascii_tree %}
                <pre style="font-family: 'Consolas', monospace; font-size: 0.8rem; line-height: 1.5; color: #334155; margin: 0; white-space: pre;">{{ ascii_tree }}</pre>
            {% else %}
                <div class="empty-state" style="padding: 2rem 1rem;">
                    <div class="empty-state-icon" style="font-size: 2.5rem;">üå±</div>
                    <p style="font-size: 0.875rem;">No nodes yet</p>
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Right Area: Main Visualization -->
    <div class="visualization-area">
        <div class="tab-nav">
            <button class="tab-btn active" onclick="switchTab(event, 'diagram-tab')">
                üìä Diagram View
            </button>
            <button class="tab-btn" onclick="switchTab(event, 'details-tab')">
                üìù Node Details
            </button>
        </div>
        
        <div class="tab-content-wrapper">
            <!-- Diagram Tab -->
            <div id="diagram-tab" class="tab-pane active">
                {% if diagram_tree %}
                    <div class="diagram-controls">
                        <button onclick="toggleFullscreen()" title="Fullscreen">
                            üîç Fullscreen
                        </button>
                        <button onclick="downloadDiagram()" title="Download">
                            üíæ Download
                        </button>
                    </div>
                    <div class="diagram-view-content">
                        <div class="diagram-container">
                            <img id="diagram-image" src="data:image/png;base64,{{ diagram_tree }}" alt="Hierarchy Tree Diagram">
                        </div>
                    </div>
                {% else %}
                    <div class="details-view-content">
                        <div class="empty-state">
                            <div class="empty-state-icon">üìä</div>
                            <h3>No Diagram Available</h3>
                            <p>Create some nodes to see the hierarchy diagram.</p>
                            {% if not attribute_nodes %}
                            <a href="/api/v1/admin/hierarchy/node/create?manufacturing_type_id={{ selected_type_id }}" class="btn btn-primary" style="margin-top: 1rem;">
                                Create First Node
                            </a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </div>
            
            <!-- Node Details Tab -->
            <div id="details-tab" class="tab-pane">
                <div class="details-view-content" id="node-details-content">
                    <div class="empty-state">
                        <div class="empty-state-icon">üëà</div>
                        <h3>Select a Node</h3>
                        <p>Click on a node in the tree to view and edit its details.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% else %}
<div class="card" style="text-align: center; padding: 4rem 2rem;">
    <div style="font-size: 4rem; opacity: 0.3; margin-bottom: 1rem;">üè≠</div>
    <h2 style="margin-bottom: 1rem;">No Manufacturing Type Selected</h2>
    <p style="color: var(--text-light); margin-bottom: 2rem;">
        Select a manufacturing type above to start building its attribute hierarchy.
    </p>
    {% if not manufacturing_types %}
    <a href="/api/v1/admin/manufacturing-types/create" class="btn btn-primary">
        Create Your First Manufacturing Type
    </a>
    {% endif %}
</div>
{% endif %}

{% endblock %}

{% block scripts %}
<style>
    .node-details-panel { padding: 2rem; max-width: 800px; margin: 0 auto; }
    .node-details-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 2px solid var(--border); }
    .node-details-title { font-size: 1.5rem; font-weight: 700; color: var(--text); }
    .node-detail-row { display: grid; grid-template-columns: 200px 1fr; gap: 1rem; padding: 0.75rem 0; border-bottom: 1px solid var(--border); }
    .node-detail-label { font-weight: 600; color: var(--text-light); }
    .node-detail-value { color: var(--text); word-break: break-word; }
    .node-type-badge { display: inline-block; padding: 0.25rem 0.75rem; border-radius: 0.25rem; font-size: 0.875rem; font-weight: 600; }
    .tree-node-clickable { cursor: pointer; transition: background-color 0.2s; padding: 0.1rem 0.3rem; border-radius: 0.25rem; display: inline-block; }
    .tree-node-clickable:hover { background-color: rgba(102, 126, 234, 0.1); }
    .tree-node-selected { background-color: rgba(102, 126, 234, 0.2); font-weight: bold; }
</style>
<script>
    const nodeData = {
        {% if attribute_nodes %}
        {% for node in attribute_nodes %}
        {{ node.id }}: {
            id: {{ node.id }},
            name: "{{ node.name }}",
            node_type: "{{ node.node_type }}",
            depth: {{ node.depth }},
            ltree_path: "{{ node.ltree_path }}",
            price_impact_type: "{{ node.price_impact_type }}",
            price_impact_value: {{ node.price_impact_value if node.price_impact_value else 'null' }},
            weight_impact: {{ node.weight_impact if node.weight_impact else 'null' }},
            data_type: "{{ node.data_type if node.data_type else '' }}",
            required: {{ 'true' if node.required else 'false' }},
            description: "{{ node.description if node.description else '' }}",
            help_text: "{{ node.help_text if node.help_text else '' }}",
            sort_order: {{ node.sort_order }},
            parent_node_id: {{ node.parent_node_id if node.parent_node_id else 'null' }}
        }{% if not loop.last %},{% endif %}
        {% endfor %}
        {% endif %}
    };
    
    function switchTab(event, tabId) {
        document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.tab-pane').forEach(pane => pane.classList.remove('active'));
        event.target.classList.add('active');
        document.getElementById(tabId).classList.add('active');
    }
    
    function selectNode(nodeId) {
        const node = nodeData[nodeId];
        if (!node) return;
        
        document.querySelector('[onclick*="details-tab"]')?.click();
        document.querySelectorAll('.tree-node-clickable').forEach(el => el.classList.remove('tree-node-selected'));
        document.querySelector(`[data-node-id="${nodeId}"]`)?.classList.add('tree-node-selected');
        
        const colors = {category: '#FFE5B4', attribute: '#B4D7FF', option: '#B4FFB4', component: '#FFB4E5', technical_spec: '#E5B4FF'};
        const html = `
            <div class="node-details-panel">
                <div class="node-details-header">
                    <div class="node-details-title">${node.name}</div>
                    <a href="/api/v1/admin/hierarchy/node/${node.id}/edit?manufacturing_type_id={{ selected_type_id }}" class="btn btn-primary btn-sm">‚úèÔ∏è Edit</a>
                </div>
                <div class="node-detail-row"><div class="node-detail-label">Node ID</div><div class="node-detail-value">#${node.id}</div></div>
                <div class="node-detail-row"><div class="node-detail-label">Type</div><div class="node-detail-value"><span class="node-type-badge" style="background-color: ${colors[node.node_type] || '#CCC'}">${node.node_type}</span></div></div>
                <div class="node-detail-row"><div class="node-detail-label">Path</div><div class="node-detail-value"><code>${node.ltree_path}</code></div></div>
                <div class="node-detail-row"><div class="node-detail-label">Depth</div><div class="node-detail-value">${node.depth}</div></div>
                <div class="node-detail-row"><div class="node-detail-label">Sort Order</div><div class="node-detail-value">${node.sort_order}</div></div>
                ${node.data_type ? `<div class="node-detail-row"><div class="node-detail-label">Data Type</div><div class="node-detail-value">${node.data_type}</div></div>` : ''}
                <div class="node-detail-row"><div class="node-detail-label">Required</div><div class="node-detail-value">${node.required ? '‚úÖ Yes' : '‚ùå No'}</div></div>
                <div class="node-detail-row"><div class="node-detail-label">Price Impact</div><div class="node-detail-value">${node.price_impact_type}${node.price_impact_value !== null ? ` ($${node.price_impact_value.toFixed(2)})` : ''}</div></div>
                ${node.weight_impact !== null ? `<div class="node-detail-row"><div class="node-detail-label">Weight</div><div class="node-detail-value">${node.weight_impact.toFixed(2)} kg</div></div>` : ''}
                ${node.description ? `<div class="node-detail-row"><div class="node-detail-label">Description</div><div class="node-detail-value">${node.description}</div></div>` : ''}
                ${node.help_text ? `<div class="node-detail-row"><div class="node-detail-label">Help Text</div><div class="node-detail-value">${node.help_text}</div></div>` : ''}
                <div class="node-detail-row"><div class="node-detail-label">Parent</div><div class="node-detail-value">${node.parent_node_id ? `<a href="#" onclick="selectNode(${node.parent_node_id}); return false;">#${node.parent_node_id} - ${nodeData[node.parent_node_id]?.name || 'Unknown'}</a>` : '<em>Root</em>'}</div></div>
            </div>
        `;
        document.getElementById('node-details-content').innerHTML = html;
    }
    
    function toggleFullscreen() {
        const visualArea = document.querySelector('.visualization-area');
        if (!document.fullscreenElement) {
            visualArea.requestFullscreen().catch(err => alert(`Error: ${err.message}`));
        } else {
            document.exitFullscreen();
        }
    }
    
    function downloadDiagram() {
        const img = document.getElementById('diagram-image');
        const link = document.createElement('a');
        link.href = img.src;
        link.download = 'hierarchy-diagram.png';
        link.click();
    }
    
  document.addEventListener('DOMContentLoaded', function() {
    const treeContent = document.querySelector('.sidebar-content pre');
    if (treeContent && Object.keys(nodeData).length > 0) {
        const lines = treeContent.innerHTML.split('\n');
        const newLines = [];
        for (let line of lines) {
            let matched = false;
            for (const node of Object.values(nodeData)) {
                const escapedName = node.name.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
                // Match node_name [node_type] with anything after (like price)
                const pattern = new RegExp(escapedName + '\\s*\\[' + node.node_type + '\\]');
                if (pattern.test(line)) {
                    line = `<span class="tree-node-clickable" data-node-id="${node.id}" onclick="selectNode(${node.id})">${line}</span>`;
                    matched = true;
                    break;
                }
            }
            newLines.push(line);
        }
        treeContent.innerHTML = newLines.join('\n');
    }
});
</script>
{% endblock %}