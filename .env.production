# Production Environment Configuration

# Application
APP_NAME="My API"
APP_VERSION="1.0.0"
DEBUG=False
API_V1_PREFIX="/api/v1"

# Database - Production PostgreSQL
DATABASE_PROVIDER=postgresql
DATABASE_HOST=your-production-db-host.com
DATABASE_PORT=5432
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_secure_db_password
DATABASE_NAME=your_db_name

# Database Pool (larger for production)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_PRE_PING=True
DATABASE_ECHO=False

# Security (MUST use strong secret key)
SECRET_KEY="your-very-strong-secret-key-min-32-chars-generated-securely"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (restrict to your production domains)
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Cache (Redis) - Azure Cache for Redis or managed Redis
CACHE_ENABLED=True
CACHE_REDIS_HOST=your-redis.redis.cache.windows.net
CACHE_REDIS_PORT=6380
CACHE_REDIS_PASSWORD=your-redis-access-key
CACHE_REDIS_DB=0
CACHE_PREFIX=myapi:prod:cache
CACHE_DEFAULT_TTL=600

# Rate Limiter (Redis)
LIMITER_ENABLED=True
LIMITER_REDIS_HOST=your-redis.redis.cache.windows.net
LIMITER_REDIS_PORT=6380
LIMITER_REDIS_PASSWORD=your-redis-access-key
LIMITER_REDIS_DB=1
LIMITER_PREFIX=myapi:prod:limiter
LIMITER_DEFAULT_TIMES=100
LIMITER_DEFAULT_SECONDS=60
