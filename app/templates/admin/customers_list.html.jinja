{% extends "admin/base.html.jinja" %}

{% block title %}Customers - WindX Admin{% endblock %}

{% block content %}
<div class="page-header">
    <div>
        <h1 class="page-title">üë• Customers</h1>
        <p class="text-gray-500 mt-1">Manage customer accounts and information</p>
    </div>
    <a href="/api/v1/admin/customers/new" class="btn btn-primary">
        <span>‚ûï</span> New Customer
    </a>
</div>

<div class="card">
    <div class="card-header flex justify-between items-center p-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold">All Customers</h2>
        
        <form method="get" class="flex gap-2">
            <input type="text" name="search" value="{{ search or '' }}" placeholder="Search name or email..." class="form-control" style="width: 250px;">
            
            <select name="type" class="form-control" style="width: 150px;">
                <option value="">All Types</option>
                <option value="residential" {% if type_filter == 'residential' %}selected{% endif %}>Residential</option>
                <option value="commercial" {% if type_filter == 'commercial' %}selected{% endif %}>Commercial</option>
                <option value="contractor" {% if type_filter == 'contractor' %}selected{% endif %}>Contractor</option>
            </select>
            
            <select name="status" class="form-control" style="width: 120px;">
                <option value="">All Status</option>
                <option value="active" {% if status_filter == 'active' %}selected{% endif %}>Active</option>
                <option value="inactive" {% if status_filter == 'inactive' %}selected{% endif %}>Inactive</option>
            </select>
            
            <button type="submit" class="btn btn-outline">Filter</button>
            {% if search or type_filter or status_filter %}
            <a href="/api/v1/admin/customers" class="btn btn-outline text-red-600">Clear</a>
            {% endif %}
        </form>
    </div>
    
    <div class="card-body p-0">
        {% if customers %}
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-200">
                        <th class="p-4 font-semibold text-gray-600">Customer</th>
                        <th class="p-4 font-semibold text-gray-600">Contact</th>
                        <th class="p-4 font-semibold text-gray-600">Type</th>
                        <th class="p-4 font-semibold text-gray-600">Status</th>
                        <th class="p-4 font-semibold text-gray-600">Created</th>
                        <th class="p-4 font-semibold text-gray-600 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for customer in customers %}
                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                        <td class="p-4">
                            <div class="font-medium text-gray-900">{{ customer.company_name or 'N/A' }}</div>
                            {% if customer.company_name %}
                            <div class="text-sm text-gray-500">{{ customer.contact_person or '' }}</div>
                            {% else %}
                            <div class="font-medium text-gray-900">{{ customer.contact_person or 'Unknown' }}</div>
                            {% endif %}
                        </td>
                        <td class="p-4">
                            <div class="text-sm">{{ customer.email or 'No email' }}</div>
                            <div class="text-sm text-gray-500">{{ customer.phone or 'No phone' }}</div>
                        </td>
                        <td class="p-4">
                            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                {% if customer.customer_type == 'commercial' %}bg-purple-100 text-purple-800
                                {% elif customer.customer_type == 'contractor' %}bg-blue-100 text-blue-800
                                {% else %}bg-green-100 text-green-800{% endif %}">
                                {{ customer.customer_type|title if customer.customer_type else 'Unknown' }}
                            </span>
                        </td>
                        <td class="p-4">
                            {% if customer.is_active %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                            {% else %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Inactive</span>
                            {% endif %}
                        </td>
                        <td class="p-4 text-sm text-gray-500">
                            {{ customer.created_at.strftime('%Y-%m-%d') }}
                        </td>
                        <td class="p-4 text-right">
                            <div class="flex justify-end gap-2">
                                <a href="/api/v1/admin/customers/{{ customer.id }}" class="btn btn-sm btn-outline" title="View Details">
                                    üëÅÔ∏è
                                </a>
                                <a href="/api/v1/admin/customers/{{ customer.id }}/edit" class="btn btn-sm btn-outline" title="Edit">
                                    ‚úèÔ∏è
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            <!-- Pagination -->
            {% if total_pages > 1 %}
            <div class="p-4 border-t border-gray-200 flex justify-center gap-2">
                {% if page > 1 %}
                <a href="?page={{ page - 1 }}&search={{ search or '' }}&type={{ type_filter or '' }}&status={{ status_filter or '' }}" class="btn btn-outline btn-sm">Previous</a>
                {% endif %}
                
                <span class="flex items-center px-3 text-sm text-gray-600">
                    Page {{ page }} of {{ total_pages }}
                </span>
                
                {% if page < total_pages %}
                <a href="?page={{ page + 1 }}&search={{ search or '' }}&type={{ type_filter or '' }}&status={{ status_filter or '' }}" class="btn btn-outline btn-sm">Next</a>
                {% endif %}
            </div>
            {% endif %}
            
        {% else %}
            <div class="p-8 text-center text-gray-500">
                <div class="text-4xl mb-2">üë•</div>
                <h3 class="text-lg font-medium text-gray-900">No Customers Found</h3>
                <p class="mb-4">Try adjusting your filters or create a new customer.</p>
                <a href="/api/v1/admin/customers/new" class="btn btn-primary">Create Customer</a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
